<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/price_in_naira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the Amount in Naira "/>

    <EditText
        android:id="@+id/amount_text_box"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="Enter Naira price"/>

    <Button
        android:id="@+id/convert_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:text="Convert"/>

    <TextView
        android:id="@+id/conertedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Price of BTC in Naira will appear here"/>

</LinearLayout>